<div class="login-wrapper">
  <img src="https://github.com/jesselatimer/goodtomes/blob/master/app/assets/images/goodtomes-logo.png?raw=true" class="logo" />

  <%= render partial: "shared/form", locals: { url: "/session", submit_value: "Sign In!", edit: false } %>

  <div class="log-state">
    <% if current_user %>
      <%= current_user.username %>
      <%= button_to "Sign Out", session_url, method: :delete, class: :btn %>
    <% else %>
      <%= link_to "Sign In", new_session_url, class: "btn selected" %>
      <%= link_to "Sign Up", new_user_url, class: "btn inactive" %>
    <% end %>
  </div>
</div>
