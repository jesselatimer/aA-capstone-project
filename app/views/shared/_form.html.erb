<div class="login-wrapper">
  <div class="user-form-wrapper">
    <form class="user-form" action="<%= url %>" method="post">
      <%= auth_token %>
      <% if edit %>
        <input type="hidden" name="_method" value="patch">
      <% end %>

      <input type="text" class="form-control" name="user[username]" placeholder="WizardName" value="<%= @user && @user.username %>">

      <input type="password" class="form-control" name="user[password]" placeholder="Password">

      <input type="submit" value="<%= submit_value %>" class="btn btn-primary full-width">
    </form>
  </div>
